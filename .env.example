# ===================
# Required
# ===================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/invaders

# RabbitMQ connection string
RABBITMQ_URL=amqp://user:password@localhost:5672

# RabbitMQ queue name for image processing
RABBITMQ_QUEUE=flash_images

# Encryption key for Neynar signer UUIDs (32+ chars recommended)
SIGNER_ENCRYPTION_KEY=your-encryption-key-here

# Neynar API key for Farcaster integration
NEYNAR_API_KEY=your-neynar-api-key

# ===================
# Health API
# ===================

# Port for health API server (default: 3001)
HEALTH_API_PORT=3001

# API key for accessing detailed health endpoints
HEALTH_API_KEY=your-health-api-key

# CORS origin for dashboard (default: http://localhost:3000)
DASHBOARD_URL=http://localhost:3000

# ===================
# Optional
# ===================

# Environment (development/production)
NODE_ENV=development

# Logging level
LOG_LEVEL=info

# Space Invaders API URL (used by health checker)
API_URL=https://space-invaders.com

# ===================
# Database Pool
# ===================

# Max database connections (default: 20)
DB_POOL_MAX=20

# Min database connections (default: 2)
DB_POOL_MIN=2

# Idle timeout in ms (default: 30000)
DB_IDLE_TIMEOUT=30000

# Connection timeout in ms (default: 2000)
DB_CONNECTION_TIMEOUT=2000

# Statement timeout in ms (default: 5000)
DB_STATEMENT_TIMEOUT=5000

# Query timeout in ms (default: 5000)
DB_QUERY_TIMEOUT=5000

# ===================
# RabbitMQ Batching
# ===================

# Batch size for RabbitMQ publishing (default: 50)
RABBITMQ_BATCH_SIZE=50

# Concurrency limit for RabbitMQ (default: 5)
RABBITMQ_CONCURRENCY=5

# ===================
# Memory Optimization
# ===================

# Batch size for memory-efficient processing (default: 100)
MEMORY_BATCH_SIZE=100

# Concurrency limit (default: 10)
MEMORY_CONCURRENCY_LIMIT=10

# GC threshold in MB (default: 512)
MEMORY_GC_THRESHOLD=512

# Monitoring interval in ms (default: 30000)
MEMORY_MONITORING_INTERVAL=30000

# ===================
# Proxy Configuration
# ===================

# Comma-separated list of proxy URLs
PROXY_LIST=

# Backup proxies if primary fails
FALLBACK_PROXY_LIST=
